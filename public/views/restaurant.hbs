<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{restaurant.name}} - Menu | Swiggy</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .restaurant-header-bg {
            background-color: #171a29;
            color: white;
            padding: 40px 0;
            position: sticky;
            top: 80px;
            z-index: 900;
        }

        .restaurant-wrapper {
            max-width: 1000px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .res-header-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 1px dashed #93959f;
            padding-bottom: 20px;
        }

        .res-header-info h1 {
            font-size: 32px;
            margin-bottom: 10px;
            font-weight: 600;
        }

        .res-header-meta {
            color: #d4d5d9;
            font-size: 14px;
        }

        .res-rating-box {
            border: 1px solid #d4d5d9;
            padding: 10px;
            border-radius: 6px;
            text-align: center;
            background: white;
            color: #3d4152;
        }

        .res-rating-val {
            color: #48c479;
            font-weight: bold;
            border-bottom: 1px solid #d4d5d9;
            padding-bottom: 5px;
            margin-bottom: 5px;
            display: block;
        }

        .menu-section {
            max-width: 800px;
            margin: 40px auto;
        }

        .menu-category {
            margin-bottom: 30px;
        }

        .menu-item {
            display: flex;
            justify-content: space-between;
            padding: 24px 0;
            border-bottom: 0.5px solid #d4d5d9;
        }

        .menu-item-info {
            flex: 1;
            padding-right: 20px;
        }

        .menu-item-price {
            margin-top: 5px;
            color: #3e4152;
            font-size: 14px;
        }

        .menu-item-desc {
            margin-top: 14px;
            color: rgba(40, 44, 63, .45);
            font-size: 14px;
            line-height: 1.3;
            width: 80%;
        }

        .menu-item-img-container {
            position: relative;
            width: 118px;
            height: 96px;
        }

        .menu-item-img {
            width: 118px;
            height: 96px;
            object-fit: cover;
            border-radius: 6px;
        }

        .add-btn {
            position: absolute;
            bottom: -8px;
            left: 50%;
            transform: translateX(-50%);
            background: white;
            color: #60b246;
            border: 1px solid #d4d5d9;
            padding: 6px 20px;
            font-weight: bold;
            font-size: 12px;
            cursor: pointer;
            box-shadow: 0 3px 8px #e9e9eb;
            border-radius: 4px;
            white-space: nowrap;
        }

        .add-btn:hover {
            box-shadow: 0 4px 14px #d4d5d9;
        }
    </style>
</head>

<body>

    {{> header}}

    <div class="restaurant-header-bg">
        <div class="restaurant-wrapper">
            <div class="res-header-content">
                <div class="res-header-info">
                    <h1>{{restaurant.name}}</h1>
                    <div class="res-header-meta">
                        <p>{{restaurant.cuisine}}</p>
                        <p>Bangalore, 2.5 km</p>
                    </div>
                </div>
                <div class="res-rating-box">
                    <span class="res-rating-val"><i class="fas fa-star"></i> {{restaurant.rating}}</span>
                    <span style="font-size: 10px; font-weight: 600; color: #8b8d97;">1K+ ratings</span>
                </div>
            </div>
        </div>
    </div>

    <div class="menu-section">
        <h2 style="margin-bottom: 20px;">Recommended</h2>
        {{#each menuItems}}
        <div class="menu-item">
            <div class="menu-item-info">
                {{#if this.is_veg}}
                <i class="fas fa-square-full"
                    style="color: green; font-size: 12px; border: 1px solid green; padding: 2px; border-radius: 2px;"></i>
                {{else}}
                <i class="fas fa-caret-up"
                    style="color: red; font-size: 14px; border: 1px solid red; padding: 2px; border-radius: 2px;"></i>
                {{/if}}
                <h3 style="margin-top: 5px; color: #3e4152;">{{this.name}}</h3>
                <div class="menu-item-price">â‚¹{{this.price}}</div>
                <div class="menu-item-desc">{{this.description}}</div>
            </div>
            <div class="menu-item-img-container">
                {{#if this.image_url}}
                <img src="{{this.image_url}}" alt="{{this.name}}" class="menu-item-img">
                {{else}}
                <img src="/image/logo.png" style="opacity:0.2;" alt="Default Food" class="menu-item-img">
                {{/if}}
                <button class="add-btn"
                    onclick="addToCart({{this.id}}, '{{this.name}}', {{this.price}}, {{../restaurant.id}})">ADD</button>
            </div>
        </div>
        {{/each}}
    </div>

    {{> footer}}

    <script>
        function addToCart(id, name, price, restaurantId) {
            const cart = JSON.parse(localStorage.getItem('swiggy_cart') || '[]');

            if (cart.length > 0 && cart[0].restaurant_id !== restaurantId) {
                if (!confirm('Your cart contains items from another restaurant. Reset cart against this restaurant?')) {
                    return;
                }
                localStorage.setItem('swiggy_cart', '[]');
                addToCart(id, name, price, restaurantId);
                return;
            }

            const existingItem = cart.find(item => item.id === id);
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({
                    id: id,
                    name: name,
                    price: price,
                    restaurant_id: restaurantId,
                    quantity: 1
                });
            }

            localStorage.setItem('swiggy_cart', JSON.stringify(cart));
            alert('Item added to cart!');
        }
    </script>
</body>

</html>