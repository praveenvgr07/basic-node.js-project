<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Secure Checkout | Swiggy</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .cart-page-bg {
            background-color: #e9ecee;
            min-height: 100vh;
            padding-bottom: 50px;
        }

        .cart-content {
            display: flex;
            max-width: 1000px;
            margin: 0 auto;
            padding-top: 50px;
            gap: 30px;
        }

        .cart-details-section {
            flex: 2;
            background: white;
            padding: 20px;
            border-radius: 4px;
            /* Slight mismatch with other radius but swiggy web is blocky */
        }

        .bill-section {
            flex: 1;
            background: white;
            padding: 20px;
            height: fit-content;
        }

        .secure-msg {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px;
            background: white;
            margin-bottom: 20px;
            font-size: 14px;
        }

        .cart-item-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px 0;
        }

        .cart-item-name {
            font-size: 14px;
            color: #282c3f;
            width: 40%;
        }

        .qty-controls {
            display: flex;
            border: 1px solid #d4d5d9;
            align-items: center;
        }

        .qty-btn {
            padding: 5px 10px;
            color: green;
            font-weight: bold;
            cursor: pointer;
            background: white;
            border: none;
        }

        .qty-val {
            padding: 5px 10px;
            color: green;
            font-weight: bold;
            font-size: 12px;
        }

        .item-total {
            font-size: 14px;
            color: #282c3f;
            width: 20%;
            text-align: right;
        }

        .bill-details h3 {
            font-size: 16px;
            border-bottom: 1px solid #e9e9eb;
            padding-bottom: 15px;
            margin-bottom: 10px;
        }

        .bill-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            color: #686b78;
            font-size: 14px;
        }

        .to-pay {
            display: flex;
            justify-content: space-between;
            border-top: 2px solid #282c3f;
            padding-top: 15px;
            margin-top: 15px;
            font-weight: bold;
            color: #282c3f;
            font-size: 16px;
        }

        .checkout-action-btn {
            background: #60b246;
            color: white;
            font-weight: bold;
            width: 100%;
            padding: 12px;
            border: none;
            margin-top: 20px;
            cursor: pointer;
            font-size: 15px;
        }
    </style>
</head>

<body class="cart-page-bg">

    {{> header}}

    <div class="cart-content">
        <div class="cart-details-section">
            <!-- If user not logged in, show login prompt -->
            {{#unless user}}
            <div style="padding: 20px; text-align: center;">
                <h2>Account</h2>
                <p>To place your order now, log in to your existing account or sign up.</p>
                <br>
                <a href="/login"><button class="nav-btn-dark">LOG IN</button></a>
            </div>
            {{/unless}}

            <div class="secure-msg" id="cartItemsContainer">
                <!-- JS will populate this -->
                <div style="width:100%; text-align:center;">
                    <img src="/image/logo.png" style="opacity:0.5; width: 60px;">
                    <h3>Your cart is empty</h3>
                    <br>
                    <a href="/home?user={{user}}" style="color:orange; font-weight:bold;">SEE RESTAURANTS NEAR YOU</a>
                </div>
            </div>
        </div>

        <div class="bill-section" id="billSection" style="display:none;">
            <div class="bill-details">
                <h3>Bill Details</h3>
                <div class="bill-row">
                    <span>Item Total</span>
                    <span id="billItemTotal">₹0</span>
                </div>
                <div class="bill-row">
                    <span>Delivery Fee</span>
                    <span>₹35</span>
                </div>
                <div class="bill-row">
                    <span>Govt Taxes & Other Charges</span>
                    <span>₹25</span>
                </div>
                <div class="to-pay">
                    <span>TO PAY</span>
                    <span id="billGrandTotal">₹0</span>
                </div>
            </div>

            <input type="hidden" id="username" value="{{user}}">
            <button class="checkout-action-btn" onclick="placeOrder()">PROCEED TO PAY</button>
        </div>
    </div>

    <script>
        function loadCart() {
            const cart = JSON.parse(localStorage.getItem('swiggy_cart') || '[]');
            const container = document.getElementById('cartItemsContainer');
            const billSection = document.getElementById('billSection');
            const itemTotalEl = document.getElementById('billItemTotal');
            const grandTotalEl = document.getElementById('billGrandTotal');

            if (cart.length === 0) {
                // Already showing empty state by default markup
                billSection.style.display = 'none';
                return;
            }

            billSection.style.display = 'block';

            let html = '';
            let itemTotal = 0;

            cart.forEach((item, index) => {
                const lineTotal = item.price * item.quantity;
                itemTotal += lineTotal;
                html += `
                    <div class="cart-item-row">
                        <div class="cart-item-name">${item.name}</div>
                         <div class="qty-controls">
                            <button class="qty-btn" onclick="updateQty(${index}, -1)">-</button>
                            <span class="qty-val">${item.quantity}</span>
                            <button class="qty-btn" onclick="updateQty(${index}, 1)">+</button>
                        </div>
                        <div class="item-total">₹${lineTotal}</div>
                    </div>
                `;
            });

            container.innerHTML = html;
            itemTotalEl.innerText = '₹' + itemTotal;
            grandTotalEl.innerText = '₹' + (itemTotal + 35 + 25);
        }

        function updateQty(index, change) {
            const cart = JSON.parse(localStorage.getItem('swiggy_cart') || '[]');
            cart[index].quantity += change;

            if (cart[index].quantity <= 0) {
                cart.splice(index, 1);
            }

            localStorage.setItem('swiggy_cart', JSON.stringify(cart));
            loadCart();
        }

        async function placeOrder() {
            const cart = JSON.parse(localStorage.getItem('swiggy_cart') || '[]');
            if (cart.length === 0) return alert('Cart is empty');

            const username = document.getElementById('username').value;
            if (!username) {
                alert('Please login to place order');
                window.location.href = '/login';
                return;
            }

            const restaurant_id = cart[0].restaurant_id;
            let itemTotal = 0;
            cart.forEach(i => itemTotal += i.price * i.quantity);
            const total = itemTotal + 35 + 25; // Including fixed charges

            try {
                const response = await fetch('/api/order', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        username: username,
                        restaurant_id: restaurant_id,
                        items: cart,
                        total_amount: total
                    })
                });

                const result = await response.json();
                if (result.success) {
                    alert('Order placed successfully!');
                    localStorage.removeItem('swiggy_cart');
                    window.location.href = '/orders?user=' + username;
                } else {
                    alert('Failed to place order: ' + result.message);
                }
            } catch (err) {
                console.error(err);
                alert('Error placing order');
            }
        }

        loadCart();
    </script>
</body>

</html>